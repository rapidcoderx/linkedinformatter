{
  "name": "linkedin-text-formatter",
  "version": "1.0.0",
  "description": "A powerful LinkedIn text formatter with Unicode styling, slash commands, markdown support, real-time preview, and export options.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build:css": "npx tailwindcss -i ./src/css/input.css -o ./public/css/styles.css --minify",
    "watch:css": "npx tailwindcss -i ./src/css/input.css -o ./public/css/styles.css --watch"
  },
  "keywords": [
    "linkedin",
    "text-formatter",
    "unicode",
    "markdown",
    "social-media"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^5.2.1",
    "marked": "^17.0.1",
    "compression": "^1.8.1",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "nodemon": "^3.1.11",
    "tailwindcss": "^4.1.18",
    "@tailwindcss/typography": "^0.5.19"
  }
}
